<link href="~/Content/Custom/LoginRegistation.css" rel="stylesheet" />
<div class="row" >
    <div class="col-4" style="display:flex;" >
        <h2 class="mt-auto mb-auto" >
            <a href="#" style="color:white;">
                    <i class="fa fa-chevron-left"></i>
                    <span>Back <span class="d-none d-sm-inline-block">To Home</span></span>
            </a>
        </h2>
    </div>
    <div class="col-4" style="display:flex">
        <div class=" mr-auto ml-auto" >
            <a href="/default" class="logo">
                <img src="~/Content/Images/Logo.png" style="height: 100px;" alt="logo"/>
                @*<img src="https://worksonline.co.uk/Images/Global/45255622237ea89ee2f67a740a9a2c58.png" style="height: 100px;" alt="logo">*@
            </a>
        </div>
    </div>
    
</div>
<div class="row" style="margin-top:5%;" >
    <div class="card bg-darken-2 p-md-3 w-50 login-registration-card" >
        <div class="card-header login-registration-card-header">
            <center> <h1>Login</h1> </center>
            <hr />
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <input type="text" class="form-control-lg" id="UserName" style="" placeholder="Username or Email" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control-lg" id="Password" placeholder="Password" />
                </div>
                <div class="form-group">
                    <center><button type="button" class="form-control-lg btn btn-success btn-lg pl-3 pr-3" id="btnLogin">Log In</button></center>
                </div>
            </form>
            <div class="mt-2 login-registration-link-div">
                <a href="#">I Forget My Password</a>
            </div>
            <div class="login-registration-link-div">
                Not a member yet? Click @Html.ActionLink("Here","","User") To Register
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Application_Scripts/Login.js"></script>
}

