<p>Login</p>
<div class="row">
    <div class="col-md-12">
        <form>
            <label>Username: <span style="color:red"> *</span></label>
            <div class="form-group">
                <input type="text" class="form-control" id="UserName" placeholder="Username" />
            </div>
            <label>Email: <span style="color:red"> *</span></label>
            <div class="form-group">
                <input type="text" class="form-control" onchange="CheckEmailValidation()" id="Email" placeholder="Email" />
            </div>
            <label>Password: <span style="color:red"> *</span></label>
            <div class="form-group">
                <input type="password" class="form-control" id="Password" placeholder="Password" />
            </div>
            <label>Confirm Password:  <span style="color:red"> *</span></label>
            <div class="form-group">
                <input type="password" class="form-control" id="ConfirmPassword" onchange="MatchPassword()" placeholder="Confirm Password" />
            </div>
            <label>Referrer:</label>
            <div class="form-group">
                <input type="text" class="form-control" id="Referrer" placeholder="Referrer" />
            </div>
            <button type="button" class="btn btn-primary" id="btnSave">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/Application_Scripts/User.js"></script>
}
