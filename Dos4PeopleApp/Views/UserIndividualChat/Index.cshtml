<link href="~/css/Chat.css" rel="stylesheet" />
<div class="content-wrapper">
    <div class="content-body">
        <input type="hidden" id="hidSenderID" name="hidSenderID" />
        <div class="card" style="padding-top:0px;">
            <div class="row g-0">
                
                <div class="col-12 col-lg-12 col-xl-12">
                    <div class="py-2 px-4 border-bottom d-none d-lg-block">
                        <div class="d-flex align-items-center">
                            <div class="position-relative">
                                <img src="/Content/Images/avatar1.png" class="rounded-circle mr-1" alt="Sharon Lessman" width="40" height="40">
                            </div>
                            <div class="flex-grow-1">
                                <strong><label id="lblUserFullName" style="color:brown"></label></strong>
                                <div class="small">
                                    <label id="lblUsergmail" style="color:brown"></label>
                                    <label id="lblUserMobile" style="color:brown"></label>
                                </div>

                            </div>

                        </div>
                    </div>

                    <div class="position-relative">
                        <div class="chat-messages p-4" id='messageBody'>
                            <div id="ChatInvHistory">
                            </div>
                        </div>
                    </div>

                    <div class="flex-grow-0 py-3 px-4 border-top">
                        <div class="input-group">
                            <input type="text" id="txtMessage" class="form-control" placeholder="Type your message">
                            <button id="btnSendIndividual" class="btn btn-primary">Send</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Application_Scripts/UserIndividualChat.js"></script>