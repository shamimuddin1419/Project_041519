<link href="~/css/Chat.css" rel="stylesheet" />
<div class="content-wrapper">
    <div class="content-body">
        <input type="hidden" id="hidSenderID" name="hidSenderID" />
        <div id="idChattingPart">
            <div class="card" style="padding-top:0px;">
                <div class="row g-0">
                    <div class="col-12 col-lg-5 col-xl-3 border-right">

                        <div class="px-4 d-none d-md-block">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <input type="text" id="UserSearchId" class="form-control my-3" placeholder="Search...">
                                </div>
                            </div>
                        </div>
                        <div style="overflow: scroll;height: 435px;">
                            <div id="UserListBindId">

                            </div>

                        </div>


                        <hr class="d-block d-lg-none mt-1 mb-0">
                    </div>
                    <div class="col-12 col-lg-7 col-xl-9">
                        <div class="py-2 px-4 border-bottom d-none d-lg-block">
                            <div class="d-flex align-items-center">
                                <div class="position-relative">
                                    <img src="/Content/Images/avatar5.png" class="rounded-circle mr-1" alt="Sharon Lessman" width="40" height="40">
                                </div>
                                <div class="flex-grow-1">
                                    <strong><label id="lblUserFullName" style="color:brown"></label></strong>
                                    <div class="small">
                                        <label id="lblUsergmail" style="color:brown"></label>
                                        <label id="lblUserMobile" style="color:brown"></label>
                                    </div>

                                </div>
                                <button type="button" class="btn btn-link" id="btnUnseenMessage">
                                    Unseen Message
                                </button>
                            </div>
                        </div>

                        <div class="position-relative">
                            <div class="chat-messages p-4" id='messageBody'>
                                <div id="ChatInvHistory">
                                </div>
                            </div>
                        </div>

                        <div class="flex-grow-0 py-3 px-4 border-top">
                            <div class="input-group">
                                <input type="text" id="txtMessage" class="form-control" placeholder="Type your message" required>
                                <button id="btnSendIndividual"  class="btn btn-primary">Send</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div id="idUnSeenMessagePart">
            <div class="card">
                <div class="card-content">
                    <div class="pull-right">
                        <button type="button" class="btn btn-link" id="btnShowChattingOption">
                            Show Chatting Option
                        </button>
                    </div>
                    <div class="card-body">
                        <table id="ListTableId" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr style="text-align:center; font-style:italic">
                                    <th colspan="3">Number of Unseen Message (User wise)</th>                                  
                                </tr>
                                <tr>
                                    <th>Detail </th>
                                    <th>Sender Name</th>
                                    <th>Nummber of Unseen Message</th>


                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
<script src="~/Application_Scripts/IndividualChat.js"></script>