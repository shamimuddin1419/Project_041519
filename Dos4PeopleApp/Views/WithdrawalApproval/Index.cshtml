
<div class="content-wrapper">
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title mb-0">
                Withdrawal Approval                
            </h3>

        </div>
        <div class="content-header-right text-md-right col-md-6 col-12">
            <div class="form-group">
                <button type="button" class="btn btn-primary" id="btnApprove">Approve</button>
                <button type="button" class="btn btn-danger" id="btnReject">Reject</button>
                <button type="button" class="btn btn-success" id="btnList">Show List</button>

            </div>
        </div>
    </div>
    <div class="content-body">
        <!-- Basic Elements start -->
        <section class="basic-elements">
            <div class="row" id="MasterDetailId">
                <input type="hidden" id="hidWithdrawalId" />
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">

                                        <fieldset class="form-group">
                                            <label for="basicInput">
                                                User Name (
                                                Main Balance : <b><label id="lblMinBalance" style="color:brown"></label></b>
                                                Commission : <b><label id="lblCommission" style="color:brown"></label></b>
                                                )
                                            </label>
                                            <input type="text" class="form-control" id="txtUserName" readonly>
                                        </fieldset>
                                    </div>                                    
                                    </div>
                                    <div class="row">
                                        <div class="col-xl-4 col-lg-6 col-md-12 mb-1">

                                            <fieldset class="form-group">
                                                <label for="basicInput">Balance Type</label>
                                                <input type="text" class="form-control" id="txtBalanceType" readonly>
                                            </fieldset>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xl-4 col-lg-6 col-md-12 mb-1">

                                            <fieldset class="form-group">
                                                <label for="basicInput">Receive Payment Method</label>
                                                <input type="text" class="form-control" id="txtReceivePaymnetMethod" readonly>
                                            </fieldset>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xl-4 col-lg-6 col-md-12 mb-1">

                                            <fieldset class="form-group">
                                                <label for="basicInput">Wallet Address</label>
                                                <input type="text" class="form-control" id="txtWalletAddress" readonly>
                                            </fieldset>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                            <fieldset class="form-group">

                                                <label for="basicInput"> Withdraw Amount</label> <label id="lblServiceCharge" style="color:brown"></label>
                                                <input type="text" class="form-control" id="txtWithdrawAmount" readonly>
                                            </fieldset>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                            <fieldset class="form-group">
                                                <label for="basicInput"> Remark</label>
                                                <textarea class="form-control" id="txtRemark" rows="2" readonly></textarea>
                                            </fieldset>
                                        </div>

                                    </div>

                                </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="ListId">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <table id="ListTableId" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Detail </th>
                                        <th>Request Date</th>
                                        <th>User Name</th>
                                        <th>Type </th>
                                        <th>Amount</th>
                                        <th>Pmt. Method</th>
                                        <th>Wallet Address</th>
                                        <th>Remark</th>

                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>


    </div>
</div>

@section scripts {
    <script src="~/Application_Scripts/WithdrawalApproval.js"></script>
}

